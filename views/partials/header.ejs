<header id="top-header">
  
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>

  <% if (locals.accountData && locals.accountData.account_firstname) { %>
    <!-- Logged-in user -->
    <div id="tools">
      <a title="Account page" href="/account/update/<%= locals.accountData.account_id %>">
        Welcome <%= locals.accountData.account_firstname %>
        <li class="nav-item"><a class="nav-link" href="/reviews/account">My Reviews</a>
      </a>
      <a title="Log out" href="/account/logout">Logout</a>
    </div>
  <% } else { %>
    <!-- Guest user -->
    <div id="tools">
      <a title="Click to log in" href="/account/login">My Account</a>
    </div>
  <% } %>


</header>
