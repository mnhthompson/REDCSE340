<h1><%- title %></h1>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="container mt-5">
  <form action="/reviews/update" method="POST">
    <div class="mb-3">
      <label for="review_text" class="form-label">Edit Your Review</label>
      <textarea id="review_text" name="review_text" rows="5" class="form-control" required><%= review.review_text %></textarea>
    </div>
    <input type="hidden" name="reviewId" value="<%= review.review_id %>">
    <input type="hidden" name="inv_id" value="<%= review.inv_id %>">
    <input type="hidden" name="account_id" value="<%= review.account_id %>">

    <button type="submit" class="btn btn-primary">Update Review</button>
    <a href="/account/admin" class="btn btn-secondary">Cancel</a>
  </form>
</section>
